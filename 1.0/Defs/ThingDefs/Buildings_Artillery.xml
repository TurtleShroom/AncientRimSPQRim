        <li>Artillery</li>
      </buildingTags>
    </building>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>AR_Project_Mechanical_Weapons</li>
    </researchPrerequisites>
    <uiIconScale>1.1</uiIconScale>
    <specialDisplayRadius>40</specialDisplayRadius>
    <drawGUIOverlay>True</drawGUIOverlay>
  </ThingDef>
  <ThingDef ParentName="BaseArtilleryBuildingRomeScorpio">
    <defName>AR_Scorpio_Building</defName>
    <label>Scorpio</label>
    <description>The masterpiece of roman siege technology. Shoots diverse kinds of munition, such like a single pointy bolts. Must be manned. Bursts when damaged. This one is smaller than the others.</description>
    <building>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretBurstCooldownTime>1.1</turretBurstCooldownTime>
      <turretBurstWarmupTime>1.9</turretBurstWarmupTime>
      <turretGunDef>AR_Scorpio_Gun</turretGunDef>
      <turretTopGraphicPath>Buildings/Ballistae/Scorpio_Top</turretTopGraphicPath>
    </building>
    <researchPrerequisites>
      <li>AR_Project_Mechanical_Weapons</li>
    </researchPrerequisites>
  </ThingDef>
  <ThingDef ParentName="BaseHumanGun">
    <defName>AR_Scorpio_Gun</defName>
    <label>Scorpio weapon</label>
    <description>Ballistae weapon.</description>
    <graphicData>
      <texPath>Buildings/Ballistae/Scorpio_Top</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.96</AccuracyShort>
      <AccuracyMedium>0.96</AccuracyMedium>
      <AccuracyLong>0.90</AccuracyLong>
      <RangedWeapon_Cooldown>1.26</RangedWeapon_Cooldown>
      <Mass>10</Mass>
      <MaxHitPoints>300</MaxHitPoints>
    </statBases>
    <weaponTags>
      <li>TurretGun</li>
    </weaponTags>
    <menuHidden>true</menuHidden>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <soundInteract>Bow_Large</soundInteract>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>AR_Bullet_Scorpio</defaultProjectile>
        <warmupTime>1.9</warmupTime>
        <range>40</range>
        <soundCast>Bow_Large</soundCast>
        <burstShotCount>1</burstShotCount>
      </li>
    </verbs>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>AR_Bullet_Scorpio</defName>
    <label>launched rock</label>
    <graphicData>
      <texPath>Projectiles/Bolt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <projectile>
      <damageDef>Stab</damageDef>
      <damageAmountBase>30</damageAmountBase>
      <speed>40</speed>
    </projectile>
  </ThingDef>
</Defs>