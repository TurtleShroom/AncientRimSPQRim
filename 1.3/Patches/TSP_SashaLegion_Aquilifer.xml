<?xml version="1.0" encoding="utf-8"?>

<Patch>
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
		<xpath>/Defs/ThingDef[defName="Roman_Standard"]</xpath>
		<!-- If it does, add this. -->
		<match Class="PatchOperationAdd">
			<success>Always</success>
			<xpath>/Defs</xpath>
			<value>
				<PawnKindDef ParentName="RomePatrician">
					<defName>TSP_AR_Aquilifer</defName>
					<label>Aqulifer</label>
					<labelPlural>Aquiliferis</labelPlural>
					<minGenerationAge>30</minGenerationAge>
					<maxGenerationAge>45</maxGenerationAge>
					<isFighter>true</isFighter>
					<!-- <fixedGender>Male</fixedGender> -->
					<itemQuality>Legendary</itemQuality>
					<apparelAllowHeadgearChance>1</apparelAllowHeadgearChance>
					<backstoryCryptosleepChance>0.1</backstoryCryptosleepChance>
					<backstoryFiltersOverride>
					  <li>
						<categoriesAdulthood>
							<li>ImperialFighter</li>
							<li MayRequire="shavius.classical.flavour">ClassicalLegion</li>
						</categoriesAdulthood>
					  </li>
					</backstoryFiltersOverride>
					<requiredWorkTags>
						<li>Violent</li>
						<li>Social</li>
					</requiredWorkTags>
					<gearHealthRange>
						<min>2</min>
						<max>7</max>
					</gearHealthRange>
					<apparelMoney>
						<min>1500</min>
						<max>3000</max>
					</apparelMoney>
					<apparelTags>
						<li>RomeCivil</li>
						<li>RomeNoble</li>
						<li>RomeBannerman</li>
						<li>ClassicalMilitaryClassy</li>
					</apparelTags>
					<weaponTags Inherit="False">
						<li>Aquila</li>
						<li>Lance</li>
						<li>LongSword</li>
						<li>RomeOfficer</li>
						<li>Praetorian</li>
						<li>MeleePiercer</li>
						<li>MedievalHeavy</li>
						<li>MedievalMeleeHeavy</li>
						<li>MedievalMeleeAdvanced</li>
						<li>NeolithicMeleeChief</li>
					</weaponTags>
					<apparelRequired Inherit="False">
						<li>Apparel_GaliaS</li>
						<li>Apparel_FurStandard</li>
					</apparelRequired>
					<techHediffsMoney>
						<min>200</min>
						<max>300</max>
					</techHediffsMoney>
					<techHediffsTags>
						<li>Simple</li>
					</techHediffsTags>
					<techHediffsChance>0.04</techHediffsChance>
					<techHediffsMoney>1000~1500</techHediffsMoney>
					<techHediffsRequired>
						<li>DeathAcidifier</li>
					</techHediffsRequired>
					<biocodeWeaponChance>0.9</biocodeWeaponChance>
					<disallowedTraits>
						<li>BodyPurist</li>
					</disallowedTraits>
					<specificApparelRequirements Inherit="False">
						<li>
							<bodyPartGroup MayRequire="oskarpotocki.vfe.classical">UpperHead</bodyPartGroup>
							<stuff>Gold</stuff>
						</li>
						<li MayRequire="oskarpotocki.vfe.classical">
							<bodyPartGroup MayRequire="oskarpotocki.vfe.classical">Neck</bodyPartGroup>
							<requiredTag MayRequire="oskarpotocki.vfe.classical">Cape</requiredTag>
							<stuff MayRequire="oskarpotocki.vfe.classical">VFEC_Tyrian</stuff>
						</li>
					</specificApparelRequirements>
					<modExtensions>
						<li Class="PawnShields.ShieldPawnGeneratorProperties">
							<shieldMoney>
								<min>9999</min>
								<max>10000</max>
							</shieldMoney>
							<shieldTags>
								<li>Aquila</li>
							</shieldTags>
						</li>
					</modExtensions>
				</PawnKindDef>
			</value>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. -->
	</Operation>
</Patch>