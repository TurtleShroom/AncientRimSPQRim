		<texturePath MayRequire="oskarpotocki.vfe.classical">Floors/roundishnegative</texturePath>
		<color MayRequire="oskarpotocki.vfe.classical">(84,84,76)</color>
		<costList MayRequire="oskarpotocki.vfe.classical">
			<VFEC_BlocksConcrete MayRequire="oskarpotocki.vfe.classical">15</VFEC_BlocksConcrete>
		</costList>
	</terrainDef>
</Defs>