<?xml version="1.0" encoding="utf-8"?>

<Defs>
  <terrainDef Abstract="True" ParentName="FloorBase" Name="MosaikBase">
    <renderPrecedence>220</renderPrecedence>
    <description>Taking a very long time to lay, the mosaic is the most attractive flooring that can be found in a Roman home. It can also be found in any mansion of other civilized peoples.</description>
    <texturePath>Floors/roundish</texturePath>
    <statBases>
		<MarketValue Inherit="False">8</MarketValue> <!-- To prevent it from giving insane amounts of Wealth based on the Work to Build -->
		<WorkToBuild>4500</WorkToBuild>
		<Beauty>4.2</Beauty>
    </statBases>
    <designatorDropdown>Floor_Mosaik</designatorDropdown>
    <researchPrerequisites>
		<li>Stonecutting</li>
		<li MayRequire="oskarpotocki.vfe.classical">VFEC_Mosaics</li>
    </researchPrerequisites>
    <tags>
		<li>Floor</li>
		<li>FineFloor</li>
    </tags>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
  </terrainDef>

  <terrainDef ParentName="MosaikBase">
    <defName>AR_MosaikSandstone</defName>
    <label>roundish sandstone mosaic</label>
    <color>(126,104,94)</color>
    <costList>
      <BlocksSandstone>20</BlocksSandstone>
    </costList>
  </terrainDef>
  <terrainDef ParentName="MosaikBase">
    <defName>AR_MosaikGranite</defName>
    <label>roundish granite mosaic</label>
    <color>(105,95,97)</color>
    <costList>
      <BlocksGranite>20</BlocksGranite>
    </costList>
  </terrainDef>
  <terrainDef ParentName="MosaikBase">
    <defName>AR_MosaikLimestone</defName>
    <label>roundish limestone mosaic</label>
    <color>(158,153,135)</color>
    <costList>
      <BlocksLimestone>20</BlocksLimestone>
    </costList>
  </terrainDef>
  <terrainDef ParentName="MosaikBase">
    <defName>AR_MosaikMarble</defName>
    <label>roundish marble mosaic</label>
    <color>(132,135,132)</color>
    <costList>
      <BlocksMarble>20</BlocksMarble>
    </costList>
  </terrainDef>
  <terrainDef ParentName="MosaikBase">
    <defName>AR_MosaikSlate</defName>
    <label>roundish slate mosaic</label>
    <texturePath>Floors/roundishnegative</texturePath>
    <color>(128,128,128)</color>
    <costList>
      <BlocksSlate>20</BlocksSlate>
    </costList>
  </terrainDef>

	<terrainDef ParentName="MosaikBase" MayRequire="oskarpotocki.vfe.classical">
