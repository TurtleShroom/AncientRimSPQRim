<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ======= Basic quality thoughts ========= -->
  <ThoughtDef>
    <defName>AR_AteFryedMeal</defName>
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate fryed meal</label>
        <description>I ate a tasty flavorful fryed meal.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>AR_AteSalad</defName>
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate salad</label>
        <description>I ate a fresh salad. It was tasty and felt healthy</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>AR_DrankOil</defName>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>drank olive oil</label>
        <description>Uwaah, I had to drink pure olive oil. I feel like I'm a salad now.</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>AteCorpse</defName>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate corpse</label>
        <description>I had to eat the flesh of a dead creature without even butchering or cooking it.</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>